<% content_for :title, 'Utilisateurs' %>
<%= form_tag users_path, :method => 'get', :id => "users_search" do %>
<p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Rechercher",:first_name => nil %>
    <%= submit_tag "Tout afficher" %></p>
<% end %>




<div class="row users">
  <% @users.each do |user| %>
  <div class="col-md-2 user">
    <%= link_to user do %>
      <%= image_tag user.gravatar_url, class: 'img-circle img-responsive' %><br/>
      <%= user %><br/>
      <% if can? :edit, user %>
      	<p><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-default btn-xs' %></p>
      <% end %>
    <% end %>
  </div>
  <% end %>
</div>
