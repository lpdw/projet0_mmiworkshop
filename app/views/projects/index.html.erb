<% content_for :title, 'Projets' %>
<%= link_to 'New', new_project_path, class: 'btn btn-primary' if can? :create, Project %><br/><br/>

<div class="row" style="margin: 25px 0;">
  <div class="col-md-12">
    <%= render 'stats'%>
  </div>
</div>
<div class="row">

  <% @projects.each do |project| %>
    <div class="col-md-3">
      <%= render 'project', project: project%>
    </div>
  <% end %>
</div>
