<p id="notice"><%= notice %></p>

<h1>Listing Workshops</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workshops.each do |workshop| %>
      <tr>
        <td><%= workshop.name %></td>
        <td><%= workshop.description %></td>
        <td><%= workshop.url %></td>
        <td><%= link_to 'Show', workshop if can? :read, :workshops %></td>
        <td><%= link_to 'Edit', edit_workshop_path(workshop) if can? :edit, :workshops %></td>
        <td><%= link_to 'Destroy', workshop if can? :destroy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workshop', new_workshop_path %>