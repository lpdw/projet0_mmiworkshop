<%= simple_form_for(@workshop) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :url %>
    <%= f.input :dateDebut, :as => :date,
     :start_year => Date.today.year,
    :end_year => 2050,
    :order => [ :day, :month, :year], :required => true%>
    <%= f.input :dateFin, :as => :date,
    :start_year => Date.today.year,
    :end_year => 2050,
    :order => [ :day, :month, :year], :required => true%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
