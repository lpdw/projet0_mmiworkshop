<%= simple_form_for @feature do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
        <div class="form-group"><%= f.association :field, label: "Champ", input_html: { class: "form-control" } %></div>
        <div class="form-group"><%= f.input :position, input_html: { class: "form-control" } %></div>
        <div class="form-group"><%= f.input :level, label: "Niveau", input_html: { class: "form-control" } %></div>
        <div class="form-group"><%= f.input :name, label: "Nom", input_html: { class: "form-control" } %></div>
        <div class="form-group"><%= f.input :description, input_html: { class: "form-control" } %></div>
        <div class="form-group"><%= f.input :icon, input_html: { class: "form-control" } %></div>
    </div>

    <div class="form-actions"><%= f.button :submit, "Enregistrer", class: "btn btn-primary" %></div>
<% end %>
