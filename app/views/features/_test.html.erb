<% status = !defined?(project_feature).nil? && !project_feature.nil? ? project_feature[:status] : 0 %>
<% refuser = !defined?(project_feature).nil? && !project_feature.nil? ? project_feature[:refuser] : 0 %>
<div class="feature-badge<% if inactive %> inactive<% end %>" id="<%= feature.id %>" style="background-color: rgba(0,0,0,0); !important">
<div class="<% if status == 1 || status == 3 %>inactive<% end %>"  style="background-color: #<%= feature.color %>;height:150px;border-radius: 100%;">
	<div class="pattern"></div>
	<i class="glyphicon <%= feature.icon %>"></i>
	<label><%= feature %></label>
</div>
<span class="level" style="<% if status == 3%>background-color: red;<% elsif status == 1 %>background-color: #00FFFF;<% end %>"><%= feature.level %></span>